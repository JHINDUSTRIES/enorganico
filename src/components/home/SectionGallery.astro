<script>
  document.addEventListener("DOMContentLoaded", () => {
    const images = [
      "/web/image/1199-57cb4aaf/gallery-2.webp",
      "/web/image/1203-6eedf15c/gallery-6.webp",
      "/web/image/1189-0857dc05/gallery-1.webp",
      "/web/image/1196-49c2f5bc/gallery-5.webp",
      "/web/image/1205-bc5c8277/gallery-3.webp",
      "/web/image/1194-d8f3fa7c/gallery-4.webp",
    ];

    // Mezclar aleatoriamente
    images.sort(() => Math.random() - 0.5);
    const shuffled = images.slice(0, 7);

    const section = document.querySelector(".enorganico-gallery__space");

    shuffled.forEach((img, i) => {
      let top, left;
      do {
        top = Math.random() * 90;
        left = Math.random() * 90;
      } while (top > 0 && top < 70 && left > 30 && left < 70);

      const el = document.createElement("img");
      el.src = img;
      el.alt = `Gallery Image ${i + 1}`;
      el.className = "enorganico-gallery__image absolute max-w-[400px] max-h-[400px] object-cover object-center transition-all duration-500 d-block p-3 bg-white";
      el.style.top = `${top}%`;
      el.style.left = `${left}%`;

      section.appendChild(el);
    });
  });
</script>

