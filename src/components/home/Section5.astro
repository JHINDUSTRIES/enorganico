<script is:inline>
  document.addEventListener("DOMContentLoaded", () => {
    // Verificar que GSAP esté cargado
    if (typeof gsap === "undefined") {
      console.warn("GSAP no está cargado");
      return;
    }

    // Registrar ScrollTrigger si está disponible
    if (typeof ScrollTrigger !== "undefined") {
      gsap.registerPlugin(ScrollTrigger);
    }

    const section = document.getElementById("enorganico-crokini");
    const images = document.querySelectorAll(".crokini-image");
    const imageWrapper = document.querySelector(".image-wrapper");

    if (!section || images.length === 0) return;

    // Configuración
    const TOTAL_ROTATION = 360; // Rotación total de 360°
    const FADE_DURATION = 0.3; // Duración del fade entre imágenes

    // Inicializar todas las imágenes con la misma rotación inicial
    gsap.set(images, {
      rotation: 0,
      opacity: 0,
    });

    // Primera imagen visible
    gsap.set(images[0], { opacity: 1 });

    // Crear ScrollTrigger para controlar la animación
    ScrollTrigger.create({
      trigger: section,
      start: "top 80%",
      end: "bottom 20%",
      scrub: 1.5,
      markers: false, // true para debug

      onUpdate: (self) => {
        const progress = self.progress;

        // Calcular rotación total continua (de 0 a 360 grados)
        const totalRotation = progress * TOTAL_ROTATION;

        // Aplicar la misma rotación a todas las imágenes
        gsap.set(images, {
          rotation: totalRotation,
          transformOrigin: "center center",
        });

        // Aplicar rotación al wrapper también para efecto 3D
        gsap.set(imageWrapper, {
          // rotationY: totalRotation * 0.1, // Pequeño efecto 3D
          transformOrigin: "center center",
        });

        // Determinar qué imagen mostrar basado en el ángulo de rotación
        // Cada imagen ocupa 120 grados (360/3)
        const imageSegment = 120; // Grados por imagen
        const normalizedRotation = totalRotation % 360;

        // Calcular índice de imagen basado en rotación
        let activeIndex;
        let fadeProgress;

        if (normalizedRotation < imageSegment) {
          activeIndex = 0;
          fadeProgress = normalizedRotation / imageSegment;
        } else if (normalizedRotation < imageSegment * 2) {
          activeIndex = 1;
          fadeProgress = (normalizedRotation - imageSegment) / imageSegment;
        } else {
          activeIndex = 2;
          fadeProgress = (normalizedRotation - imageSegment * 2) / imageSegment;
        }

        // Calcular índice de la siguiente imagen
        const nextIndex = (activeIndex + 1) % images.length;

        // Animar transiciones suaves entre imágenes
        if (fadeProgress < 0.5) {
          // La imagen actual está más visible
          gsap.to(images[activeIndex], {
            opacity: 1 - fadeProgress * 2, // De 1 a 0 en la primera mitad
            duration: FADE_DURATION,
            ease: "power2.out",
          });

          if (activeIndex === 0) {
            gsap.to(images[images.length - 1], {
              opacity: fadeProgress * 2, // La última se vuelve visible
              duration: FADE_DURATION,
              ease: "power2.out",
            });
          } else {
            gsap.to(images[activeIndex - 1], {
              opacity: fadeProgress * 2,
              duration: FADE_DURATION,
              ease: "power2.out",
            });
          }
        } else {
          // La siguiente imagen está tomando protagonismo
          gsap.to(images[activeIndex], {
            opacity: (1 - fadeProgress) * 2, // De 1 a 0 en la segunda mitad
            duration: FADE_DURATION,
            ease: "power2.out",
          });

          gsap.to(images[nextIndex], {
            opacity: (fadeProgress - 0.5) * 2, // De 0 a 1 en la segunda mitad
            duration: FADE_DURATION,
            ease: "power2.out",
          });
        }

        // Actualizar clases para CSS (opcional)
        images.forEach((img, index) => {
          if (index === activeIndex || (fadeProgress < 0.5 && index === (activeIndex - 1 + images.length) % images.length) || (fadeProgress >= 0.5 && index === nextIndex)) {
            img.classList.add("active");
          } else {
            img.classList.remove("active");
          }
        });
      },
    });

    // Efecto de entrada inicial
    gsap.from(imageWrapper, {
      opacity: 0,
      scale: 0.9,
      rotationY: -30,
      duration: 1.5,
      ease: "power3.out",
      scrollTrigger: {
        trigger: section,
        start: "top 85%",
        end: "top 70%",
        toggleActions: "play none none reverse",
      },
    });
  });
</script>
